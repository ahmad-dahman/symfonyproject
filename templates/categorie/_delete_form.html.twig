{% block body %}
{% if categorie.modeles|length > 0 %}
<form method="post" action="{{ path('categorie_show', {'id': categorie.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to other models !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ categorie.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}
