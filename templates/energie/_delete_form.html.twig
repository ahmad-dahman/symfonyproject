{% block body %}
{% if energie.automobiles|length > 0 %}
<form method="post" action="{{ path('energie_show', {'id': energie.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to other automobile !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ energie.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('energie_delete', {'id': energie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ energie.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}
