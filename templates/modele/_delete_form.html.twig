{% block body %}
{% if modele.year|length > 0 %}
<form method="post" action="{{ path('modele_show', {'id': modele.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to an automobile or modele !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ modele.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('modele_delete', {'id': modele.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ modele.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}
