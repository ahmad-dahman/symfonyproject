{% extends 'base.html.twig' %}

{% block title %}Modele{% endblock %}

{% block body %}
    <h1>Modele</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ modele.id }}</td>
            </tr>
            <tr>
                <th>Nom Modele</th>
                <td>{{ modele.nomModele }}</td>
            </tr>
            <tr>
                <th>Nom Marque</th>
                <td>{{ modele.marque }}</td>
            </tr>
            <tr>
                <th>Nom Categorie</th>
                <td>{{ modele.categorie }}</td>
            </tr>
            <tr>
                <th>Production Year</th>
                <td>
                <ul>
                {% for year in modele.year %}
                <li>{{ year.getProductionYear() }}</li>
                {% endfor %}
                </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('modele_index') }}">back to list</a>

    <a href="{{ path('modele_edit', {'id': modele.id}) }}">edit</a>

    {{ include('modele/_delete_form.html.twig') }}
{% endblock %}
