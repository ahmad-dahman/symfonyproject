{% block body %}
{% if year.modeles|length > 0 %}
<form method="post" action="{{ path('year_show', {'id': year.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to an automobile or modele !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ year.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('year_delete', {'id': year.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ year.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}
