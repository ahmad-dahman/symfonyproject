{% block body %}
{% if marque.modeles|length > 0 %}
<form method="post" action="{{ path('marque_show', {'id': marque.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to an automobile or modele !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ marque.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('marque_delete', {'id': marque.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}

