{% block body %}
{% if etat.automobiles|length > 0 %}
<form method="post" action="{{ path('etat_show', {'id': etat.id}) }}" onsubmit="return alert('you can not delete this item. this item is connected to other automobile !!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('show' ~ etat.id) }}">
    <button class="btn">Delete</button>
</form>
{% else %}
<form method="post" action="{{ path('etat_delete', {'id': etat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etat.id) }}">
    <button class="btn">Delete</button>
</form>
{% endif %}
{% endblock %}

