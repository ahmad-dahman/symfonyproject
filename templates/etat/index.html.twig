{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block body %}
    <h1>Etat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>Automobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.id }}</td>
                <td>{{ etat.nomEtat }}</td>
                <td>
                <ul>
                {% for Automobile in etat.automobiles %}
                <li>{{ Automobile.getNImmatriculation() }}</li>
                {% endfor %}
                </ul>
                </td>
                <td>
                    <a href="{{ path('etat_show', {'id': etat.id}) }}">show</a>
                    <a href="{{ path('etat_edit', {'id': etat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etat_new') }}">Create new</a>
{% endblock %}
